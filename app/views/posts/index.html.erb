<% if @posts.any? %>
	<% @posts.each do |post| %>
		<h2><%= link_to post.name, post_path(post) %></h2>
		<%= image_tag post.image.url(:thumb) %>
		<p><%= pluralize post.likes.count, 'like' %></p>
		<p><%= link_to "Like", post_likes_path(post), method: :post %></p>
		<%= link_to "Comment", new_post_comment_path(post) %>
		<%= link_to "Edit post", edit_post_path(post) %> 
		<%= link_to	"Delete #{post.name}", post_path(post), method: :delete %>
		<% if post.comments.any? %>
			<ul>
				<% post.comments.each do |post| %>
					<li><%= post.thoughts %></li>
				<% end %>
			</ul>
		<% else %>
			<p> No Comments </p>
		<% end %>
	<% end %>
<% else %>
	<h1> No posts yet </h1>
<% end %>

<%= link_to "Add a post", new_post_path %>