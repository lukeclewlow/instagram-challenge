<% if @posts.any? %>
	<% @posts.each do |post| %>
		<h2><%= link_to post.name, post_path(post) %></h2>
		<%= image_tag post.image.url(:large) %>
		<p><%= pluralize post.likes.count, 'like' %></p>
		<p><%= link_to "Like", post_likes_path(post), method: :post %></p>
		<%= link_to "Edit", edit_post_path(post) %> 
		<%= link_to	"Delete", post_path(post), method: :delete %>
	<% end %>
<% else %>
	<h1> No posts yet </h1>
<% end %>

<%= link_to "Add a post", new_post_path %>